function decode($c, $s) {
    $f = 'strtr';
    $r = base64_decode($f($c, '-_', '+/'), true);
    if ($r === false) {
        throw new InvalidArgumentException("Not valid Base64");
    }
    $k = unpack('C*', $s);
    $l = count($k);
    $p = '';
    for ($i = 0, $n = strlen($r); $i < $n; $i++) {
        $p .= chr(ord($r[$i]) ^ $k[$i % $l + 1]);
    }
    return $p;
}

